<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <context-param>
        <param-name>safePaths</param-name>
        <param-value>/auth/register,/auth/login,/auth/refresh</param-value>
    </context-param>

    <listener>
        <listener-class>com.ecommerce.app.listeners.RedisPoolListener</listener-class>
    </listener>

    <filter>
        <filter-name>RateLimiter</filter-name>
        <filter-class>org.apache.catalina.filters.RateLimitFilter</filter-class>
        <init-param>
            <param-name>bucketRequests</param-name>
            <param-value>200</param-value>
        </init-param>
        <init-param>
            <param-name>bucketDuration</param-name>
            <param-value>60</param-value>
        </init-param>
        <init-param>
            <param-name>rateLimitClassName</param-name>
            <param-value>org.apache.catalina.util.FastRateLimiter</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>PathParamResolver</filter-name>
        <filter-class>com.ecommerce.app.filters.ParamResolverFilter</filter-class>
        <init-param>
            <param-name>hello</param-name>
            <param-value>world</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>ResponseFilter</filter-name>
        <filter-class>com.ecommerce.app.filters.ResponseFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.ecommerce.app.filters.AuthenticationFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>ResponseFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RateLimiter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PathParamResolver</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.ecommerce.app.controllers.auth.RegisterController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/api/v1/auth/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.ecommerce.app.controllers.user.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/api/v1/users/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.ecommerce.app.controllers.auth.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/api/v1/auth/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RefreshController</servlet-name>
        <servlet-class>com.ecommerce.app.controllers.auth.RefreshController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RefreshController</servlet-name>
        <url-pattern>/api/v1/auth/refresh</url-pattern>
    </servlet-mapping>

</web-app>